<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
  
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/posts/{{post.id}}">{{post.header}}</a>
    </h2>
    
    <span>Posted by {{post.user.name}} on {{format_date post.date_created}}</span>
  </div>
 <div>
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}

